<div class="search_type cc mb10">
  <div class="h_a">用户列表</div>
</div>

<div class="table_list">
  <table width="100%">
    <colgroup>
      <col/>
      <col/>
      <col/>
      <col/>
    </colgroup>
    <thead>
    <tr>
      <td>ID</td>
      <td>基础执照号</td>
      <td>姓名</td>
      <td>状态</td>
      <td>操作</td>
    </tr>
    </thead>
    <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.card_no %></td>
          <td><%= user.name %></td>
          <td><%= user.status %></td>
          <td><a href="/manage/users/<%= user.id %>/edit" class="btn btn_success">编辑</a>
          <%= link_to '删除',
                      {:controller => :users, :action => 'destroy', :id => user.id},
                      {:method => :delete, :confirm => '你确定要删除此用户吗?', :class => 'btn btn_error'}
          %>
          </td>
        </tr>
    <% end %>
  </table>
</div>
<div><a href="/manage/users/new" class="btn"><span class="add"></span>新增用户</a></div>
<div class="p10 pages">
  <%= will_paginate @users %>
</div>